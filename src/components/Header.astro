---
/*
  Sticky, translucent header with backdrop blur.
  Mobile menu toggles an off-canvas panel.
*/
---
<header class="sticky top-0 z-50">
  <!-- translucent bg + blur + border, matches demo feel -->
  <div id="site-header" class="backdrop-blur-md bg-white/60 border-b border-slate-200/50">
    <div class="mx-auto px-6 py-4 flex items-center justify-between container">
      <!-- logo -->
      <a class="flex items-center gap-3" href="/">
        <span class="inline-flex items-center justify-center w-9 h-9 rounded-full bg-brand text-white font-semibold">ID</span>
        <span class="font-semibold text-lg">Idol</span>
      </a>

      <!-- desktop nav -->
      <nav class="hidden md:flex items-center gap-6">
        <a href="#features" class="text-slate-700 hover:text-slate-900">Features</a>
        <a href="#pricing" class="text-slate-700 hover:text-slate-900">Pricing</a>
        <a href="#customers" class="text-slate-700 hover:text-slate-900">Customers</a>
        <a class="ml-4 inline-block px-4 py-2 rounded-md bg-brand text-white font-medium" href="#signup">Start Trial</a>
      </nav>

      <!-- mobile menu button -->
      <div class="md:hidden">
        <button id="mobile-menu-btn" aria-label="Open menu" class="p-2 rounded-md text-slate-700 hover:bg-slate-100">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- mobile panel (hidden by default) -->
  <div id="mobile-panel" class="md:hidden hidden">
    <div class="px-6 py-4 border-b">
      <a href="#features" class="block py-2">Features</a>
      <a href="#pricing" class="block py-2">Pricing</a>
      <a href="#customers" class="block py-2">Customers</a>
      <a class="mt-2 inline-block px-4 py-2 rounded-md bg-brand text-white font-medium" href="#signup">Start Trial</a>
    </div>
  </div>

  <script type="module">
    // Basic mobile toggle â€” progressive enhancement only
    const btn = document.getElementById('mobile-menu-btn');
    const panel = document.getElementById('mobile-panel');
    btn?.addEventListener('click', () => {
      panel.classList.toggle('hidden');
    });

    // Add a subtle shadow when scrolled to match demo visual (optional)
    const headerEl = document.getElementById('site-header');
    const onScroll = () => {
      if (window.scrollY > 10) {
        headerEl.classList.add('shadow-sm');
      } else {
        headerEl.classList.remove('shadow-sm');
      }
    };
    window.addEventListener('scroll', onScroll, { passive: true });
  </script>
</header>
